/* CSS HEX */
--green-pantone: #00ad43ff;
--yellow-pantone: #fedf00ff;
--blue-pantone: #0018a8ff;
--light-slate-gray: #778899ff;
--ghost-white: #f8f8ffff;

/* CSS HSL */
--green-pantone: hsla(143, 100%, 34%, 1);
--yellow-pantone: hsla(53, 100%, 50%, 1);
--blue-pantone: hsla(231, 100%, 33%, 1);
--light-slate-gray: hsla(210, 14%, 53%, 1);
--ghost-white: hsla(240, 100%, 99%, 1);

